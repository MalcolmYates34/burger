
<img class="img-fluid" src="/assets/img/burger.jpeg" alt="hamburger">

<h1> Who Wants To...Eat Da Burger!</h1>

<div class="row m-4">
  <div class="col-6">
    <h2>Take A Bite</h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devour=false}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-6">
    <h2>Devoured</h2>

    <ul>
    {{#each burgers}}
      {{#if devoured}}
          {{> burgers/burger-block devour=true}}
      {{/if}}
    {{/each}}
    </ul>
  </div>
</div>

<div class="row mt-4">
  <div class="col-12">
    <h2>Add Your Favorite Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="bu">Name of Burger:</label>
        <input type="text" id="bu" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>

